<nav id='user'>
  <p>Hello <strong>{{this.userFirstName}}</strong></p>
  <div class='icon'>
    <Svg::UserCircle />
  </div>

  <div class='dropdown {{this.showDropdown}}'>
    <a href={{href-to 'secure.user.preferences'}}>Your preferences</a>
    {{!-- <a href={{href-to 'secure.user.download'}}>download app</a> --}}
    <a href={{href-to 'secure.user.help'}} {{on 'click' this.openLiveChat}}>
      Ask for help
    </a>
    <a href={{href-to 'secure.user.issue'}} {{on 'click' this.openLiveChat}}>
      Report an issue
    </a>

    <button onclick={{this.auth.reset}} type='button'>
      Logout
    </button>
  </div>
</nav>