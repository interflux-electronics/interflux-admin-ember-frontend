{{#let @model.event as |event|}}
  <Modal @id='event-create'>
    <h1>Create new event</h1>

    <Field::String
      @label='Name'
      @record={{event}}
      @attribute='name'
      @localSave={{true}}
    />

    <Field::String
      @label='Location'
      @record={{event}}
      @attribute='location'
      @localSave={{true}}
    />

    <Field::String
      @label='Start date'
      @record={{event}}
      @attribute='endDate'
      @legend='Enter DD/MM/YYYY format'
      @localSave={{true}}
    />

    <Field::String
      @label='End date'
      @record={{event}}
      @attribute='startDate'
      @legend='Enter DD/MM/YYYY format'
      @localSave={{true}}
    />

    <Field::String
      @label='Call to action'
      @record={{event}}
      @attribute='callToAction'
      @localSave={{true}}
    />

    <Button
      @text='Save'
      @theme='big-green'
      @disabled={{this.preventSave}}
      @isBusy={{this.isSaving}}
      @onClick={{this.onSave}}
    />
  </Modal>
{{/let}}