<Page::Content @id='events'>
  <h1>Events</h1>

  {{#if @model.events}}
    <Spreadsheet
      @records={{@model.events}}
      @linkRoute='secure.events.event'
      @createRoute='secure.events.create'
      @showCreateButton='true'
      @columns={{array
        (hash key='startDate' label='Date')
        (hash key='name' label='Name')
        (hash key='city' label='City')
        (hash key='hasEnded' label='Ended')
      }}
    />
  {{else}}
    <p>No events found.</p>
  {{/if}}
</Page::Content>

{{outlet}}