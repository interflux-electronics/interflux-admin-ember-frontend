{{#with @model.product as |product|}}
  <Modal @id="product">
    {{#if product.image}}
      <ResponsiveImage @image={{product.image}} />
    {{/if}}

    <h1>{{product.name}}</h1>

    <h2>Properties</h2>

    <Field::String
      @label='Name'
      @record={{product}}
      @attribute='name'
      @disabled='true'
    />

    <Field::OneToMany
      @label='Product family'
      @baseRecord={{product}}
      @baseLabel='productFamily'
      @targetModel="product-family"
      @targetFilter="nameSingle"
      @targetRoute="secure.families.family"
      @minKeyStrokes='0'
    />

    <Field::String
      @label='Better description than family'
      @legend='In case the family name is not an accurate description, then override it here with a better name. For example "flux pen" instead of "auxiliary". Otherwise, leave blank.'
      @record={{product}}
      @attribute='label'
    />

    <Field::ManyToMany
      @label="Suitable for"
      @baseRecord={{product}}
      @baseModel="product"
      @baseLabel="productUses"
      @joinModel="product-use"
      @joinRankKey="rankAmongUses"
      @targetModel="use"
      @targetLabel="text"
      @targetRoute='secure.uses.use'
    />

    <Field::ManyToMany
      @label="Key advantages"
      @baseRecord={{product}}
      @baseModel="product"
      @baseLabel="productQualities"
      @joinModel="product-quality"
      @joinRankKey="rankAmongQualities"
      @targetModel="quality"
      @targetLabel="text"
      @targetRoute='secure.qualities.quality'
    />

    <h2>Content</h2>

    <Field::String
      @label='The "elevator pitch"'
      @legend='Explain to someone who has never heard of Interflux in 7 to 20 seconds what this product is, which problem it solves, why it is so great and who will want to be using this {{product.name}}.'
      @record={{product}}
      @attribute='pitch'
      @multiline='true'
    />

    <Field::String
      @label='Summary'
      @legend="The summary is similar to the elevator pitch, but is not limited to 160 characters and text only. The summary is what one would read AFTER you've sparked their interest with the pitch. Here you get to elaborate more in depth. You can also use markdown, images and videos to make the content come alive."
      @record={{product}}
      @attribute='summary'
      @multiline='true'
    />

    <Field::String
      @label='Chemical & physical properties'
      @record={{product}}
      @attribute='properties'
      @multiline='true'
    />

    <Field::String
      @label='How to use {{product.name}}'
      @record={{product}}
      @attribute='instructions'
      @multiline='true'
    />

    <h2>Images</h2>

    <Fieldset
      @label='The avatar'
      @legend='If you had to present this product with only one image, which one would you choose? The avatar is the single most representative image of this product and will be shown everywhere on our website, on Google and in social media links.'
    >
      <ul class="images">
        <li class="avatar">
          <ResponsiveImage @image={{product.image}} />

          <div class="buttons">
            <Button
              @text="View details"
              @theme="secondary"
              @route='secure.images.image'
              @model={{product.image.id}}
            />
          </div>
        </li>
      </ul>
    </Fieldset>

    <Fieldset
      @label='Shown on website'
      @legend='These images will be shown on the product page of {{product.name}}. Make sure all available sizes, containers, alloys and shapes of {{product.name}} are shown on our website.'
    >
      <ul class="images">
        {{#each this.publicImages as |relation|}}
          <li>
            <p>{{relation.rank}}{{if (eq relation.image.id product.image.id) ' - avatar'}}</p>

            <ResponsiveImage @image={{relation.image}} />

            <div class="buttons">
              {{#if (not (eq relation.image.id product.image.id))}}
                <Button
                  @text="Make avatar"
                  @theme="secondary"
                  @onClick={{fn this.setAvatar relation}}
                />
              {{/if}}
              {{#if (not (eq relation.rank 1))}}
                <Button
                  @text="Move up"
                  @theme="secondary"
                  @onClick={{fn this.moveImageUp relation}}
                />
              {{/if}}
              {{#if (not (eq relation.rank this.publicImageCount))}}
                <Button
                  @text="Move down"
                  @theme="secondary"
                  @onClick={{fn this.moveImageDown relation}}
                />
              {{/if}}
              <Button
                @text="Hide from website"
                @theme="secondary"
                @onClick={{fn this.hideImage relation}}
              />
              <Button
                @text="View details"
                @theme="secondary"
                @route='secure.images.image'
                @model={{relation.image.id}}
              />
            </div>
          </li>
        {{else}}
          <p>- none -</p>
        {{/each}}
      </ul>
    </Fieldset>

    <Fieldset
      @label='Hidden images'
      @legend='These images are for internal use only and will not be shown on our website.'
    >
      <ul class="images">
        {{#each this.hiddenImages as |relation|}}
          <li>
            <ResponsiveImage @image={{relation.image}} />

            <div class="buttons">
              <Button
                @text="Show on website"
                @theme="secondary"
                @onClick={{fn this.showImage relation}}
              />

              <Button
                @text="View details"
                @theme="secondary"
                @route='secure.images.image'
                @model={{relation.image.id}}
              />
            </div>
          </li>
        {{else}}
          <p>- none -</p>
        {{/each}}
      </ul>
    </Fieldset>

    <h2>Status</h2>

    <Field::String::Radio
      @record={{product}}
      @attribute='status'
      @options={{this.statusOptions}}
    />

    <h2>Website</h2>

    {{#if product.isOnline}}
      <Fieldset
        @label='Where is this product seen on our website?'
        @legend='Copy paste the links below to share.'
      >
        <ul class="list">
          <li>
            <a
              href={{product.url}}
              target="_blank"
              rel="noreferrer noopener"
            >
              {{product.link}}
            </a>
          </li>
          <li>
            <a
              href={{product.family.url}}
              target="_blank"
              rel="noreferrer noopener"
            >
              {{product.family.link}}
            </a>
          </li>
          {{#each product.uses as |use|}}
            <li>
              <a
                href={{use.url}}
                target="_blank"
                rel="noreferrer noopener"
              >
                {{use.link}}
              </a>
            </li>
          {{/each}}
        </ul>
      </Fieldset>
    {{else}}
      <p>{{product.name}} is hidden from our website.</p>
    {{/if}}

    <h2>Substitute</h2>

    <Field::OneToMany
      @label='Is there a better product?'
      @legend='In case there is a product which does the same thing as {{product.name}}, but better, then please find and select that product below. If {{product.name}} has the status "outdated" or "discontinued" and you have selected a better product below, then we will show a message on the product page of {{product.name}} to encourage visitors to look at the better product instead.'
      @baseRecord={{product}}
      @baseLabel='superiorProduct'
      @targetModel="product"
      @targetFilter="name"
      @minKeyStrokes='1'
    />

    <h2>Compliance</h2>

    <Field::Boolean
      @record={{product}}
      @attribute='compliesWithIEC'
    >
      <label>Complies with IEC EN 61190-1-1(2002)</label>
    </Field::Boolean>

    <Field::Boolean
      @record={{product}}
      @attribute='compliesWithIPC'
    >
      <label>Complies with IPC J-STD-004A</label>
    </Field::Boolean>

    <Field::Boolean
      @record={{product}}
      @attribute='compliesWithIPC'
    >
      <label>Complies with IPC J-STD-004B</label>
    </Field::Boolean>

    <Field::Boolean
      @record={{product}}
      @attribute='compliesWithIPC'
    >
      <label>Complies with IPC J-STD-005</label>
    </Field::Boolean>

    <Field::Boolean
      @record={{product}}
      @attribute='compliesWithROHS'
    >
      <label>Complies with RoHS</label>
    </Field::Boolean>

    <Field::Boolean
      @record={{product}}
      @attribute='compliesWithISO'
    >
      <label>Complies with ISO 9001</label>
    </Field::Boolean>

    <Fieldset @label='Test results'>
      <table class="results">
        <thead>
          <tr>
            <th>Property</th>
            <th>Result</th>
            <th>Method</th>
          </tr>
        </thead>

        <tbody>
          {{#each this.testResults as |row i|}}
            <tr>
              {{#each row as |cell ii|}}
                <td>
                  <input
                    value={{cell}}
                    {{on 'change' (fn this.updateCell i ii)}}
                    autocapitalize='off'
                    autocomplete='off'
                    autocorrect='off'
                    spellcheck='false'
                  >
                </td>
              {{/each}}
            </tr>
          {{/each}}
        </tbody>
      </table>

      {{#if this.testResults}}
        <div class="buttons">
          <Button
            @text="Add row"
            @theme="save"
            @onClick={{this.addRow}}
          />
          <Button
            @text="Remove row"
            @theme="save"
            @onClick={{this.removeRow}}
          />
        </div>
      {{/if}}

    </Fieldset>

    <h2>Documents</h2>

    <Field::ManyToMany
      @label="Documents"
      @baseRecord={{product}}
      @baseModel="product"
      @baseLabel="productDocuments"
      @joinModel="product-document"
      @joinRankKey="rankAmongDocuments"
      @targetModel="document"
      @targetLabel="name"
      @targetRoute='secure.documents.document'
    />

    <h2>Database</h2>

    <Field::String
      @label='Database ID'
      @record={{product}}
      @attribute='id'
      @disabled='true'
    />
  </Modal>
{{/with}}