<Page::Content @id="products">
  <h1>Products</h1>

  <Spreadsheet
    @records={{@model.products}}
    @linkRoute="secure.products.product"
    @columns={{array
      (hash key='name' label='Name')
      (hash key='family.nameSingle' label="Family")
      (hash key='status' label="Status")
    }}
  />
</Page::Content>