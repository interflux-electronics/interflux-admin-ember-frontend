{{#let @model.quality as |quality|}}
  <Modal @id='quality-create'>
    <h1>Create new product quality</h1>

    <Field::String
      @label='Choose a name'
      @record={{quality}}
      @attribute='text'
      @beforeSave={{this.beforeSave}}
      @afterSave={{this.afterSave}}
    />
  </Modal>
{{/let}}