{{#with @model.use as |use|}}
  <Modal @id="use">
    <h1>{{use.text}}</h1>
    <h2>Properties</h2>

    <Field::String
      @label='Process name'
      @record={{use}}
      @attribute='text'
    />

    <Field::String
      @label='Explanation'
      @legend="Explain in depth what {{use.text}} means, who it is used by and why it matters. Aim for the first paragraphs to make sense to a layman (no jargon). In the paragraphs after, feel free to get technical."
      @record={{use}}
      @attribute='gist'
      @multiline='true'
    />

    <Field::String
      @label='Rank'
      @legend="Enter an integer. Wherever we list processes on our website, we'll sort them small numbers to the top and big numbers to the bottom. Those without integer will be sorted alphabetically below those with an integer."
      @record={{use}}
      @attribute='rank'
    />

    <h2>Relations</h2>

    <Field::ManyToMany
      @label="Products"
      @legend="All products which can are suitable for this process."
      @baseRecord={{use}}
      @baseModel="use"
      @baseLabel="productUses"
      @joinModel="product-use"
      @targetModel="product"
      @targetLabel="name"
      @targetRoute='secure.products.product'
    />

    <Fieldset
      @label="Families"
      @legend="All families from the products above."
    >
      <ul class="list">
        {{#each use.families as |family|}}
          <li>
            <a href={{href-to 'secure.families.family' family.id}}>
              {{family.namePlural}}
            </a>
          </li>
        {{else}}
          <li class="dashed">
            <span>- none -</span>
          </li>
        {{/each}}
      </ul>
    </Fieldset>

    <h2>Images</h2>

    <Field::OneToMany
      @label='Icon'
      @baseRecord={{use}}
      @baseLabel='image'
      @targetModel="image"
      @targetFilter="alt"
      @minKeyStrokes='2'
    />

    <div class="icon">
      {{#if use.image}}
        <a href={{href-to 'secure.images.image' use.image.id}}>
          <ResponsiveImage @image={{use.image}} />
        </a>
        <a href={{href-to 'secure.images.image' use.image.id}}>
          <ResponsiveImage @image={{use.image}} />
        </a>
      {{else}}
        <p>- no icon -</p>
      {{/if}}
    </div>

    <Field::ManyToMany
      @label="The 4 avatars"
      @legend="On the product overview page we show 4 images to represent this process."
      @baseRecord={{use}}
      @baseModel="use"
      @baseLabel="useImages"
      @joinModel="use-image"
      @targetModel="image"
      @targetLabel="alt"
      @targetRoute='secure.images.image'
      @disabled={{this.maxAvatarCountReached}}
    />

    <Fieldset>
      <ul class="images">
        {{#each use.useImages as |relation|}}
          <li>
            <p>{{relation.image.alt}}</p>
            <ResponsiveImage @image={{relation.image}} />
          </li>
        {{/each}}
      </ul>
    </Fieldset>

    <h2>Database</h2>

    <Field::String
      @label='Database ID'
      @record={{use}}
      @attribute='id'
      @disabled='true'
    />
  </Modal>
{{/with}}